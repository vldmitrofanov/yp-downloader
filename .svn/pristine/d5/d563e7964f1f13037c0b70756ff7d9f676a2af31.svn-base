#loginHere{
	background-image:url(../images/login_bg.png);
	background-repeat:no-repeat;
	width:425px;
	height:255px;
	overflow: hidden;
	border:1px solid #999;
	margin: 0 auto;
	}
	
#loginFormDiv{
	background-image:url(../images/grabber_login.gif);
	background-repeat:no-repeat;
	background-position:center top; 
	margin-top: 42px;
	margin-left:auto;
	margin-right:72px;
	width:270px;
	padding-top:40px;
	padding-left:10px;
	}
#loginForm{
	width:250px;
}
#Lsubmit{
	background-color:#0099cc;
	border: 2px solid #03F;
	border-color: #3CF #36c #36C #3CF ;
	width:110px;
	height:26px;
	margin-top: 8px;
	margin-left:151px;
	font:15px arial,sans-serif;
	font-style:normal;
	color:#DDD;
}
#Lsubmit:hover{
	background-color:#F90;
	border: 2px solid #FC0;
	border-color: #FC0 #F60 #F60 #FC0 ;
	}
	
.Linput{
  margin: 0;
  border: 1px solid #DDD;
  border-color: #9b9b9b #ededed #DDD #c2c2c2;
  padding:5px 4px 4px 4px;
  margin-top: 8px;
  margin-bottom:3px;
  width:100%;
  font:15px arial,sans-serif;
  color:#666;
/*  padding: 1ex 1em .8ex; */
}
.Linput:focus{
	background-color:#FFC;
	color:#000;}
