body, html {
  	height:100%;
  	background: #2b2b2b;
	padding:0;
	margin:0;
	width:100%;
        min-height:100%;
}

#loginCont{
	background-image:url(../images/bg_grad.gif);
	background-repeat:repeat-x;
	padding: 0;
	height:100%;
	width:100%;
	min-height:400px;
}
#loginSpacer{
	min-height:10%;
	height:20%;}

#messagediv{
        margin: 0 auto;
        color:#F00;
        font-family: Verdana;
        font-size: 1.1em;
        vertical-align:middle;
        padding-top: 6%;
        overflow: hidden;
        text-align:center;}

